generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:laica2003@localhost:5432/rugbyanalytics?schema=public"
}

model team {
  id     Int      @id @default(autoincrement())
  name   String
}

model players { 
  name        String   @id @unique
  position    Int
  number      Int
  gamePlayers gameplayer[]
}

model game {
  id          Int      @id @default(autoincrement())
  date        String   
  place       String
  opponent    String
  division    String
  gamePlayers gameplayer[]
}

model event {
  id          Int      @id @default(autoincrement())
  GameId      Int
  half        Boolean
  PlayerId    String
  EventTypeId Int
}

model eventtype {
  id        Int      @id @default(autoincrement())
  name      String
  subType   Int
  score     Int        @default(0)
}

model gameplayer {
  game      game     @relation(fields: [gameId], references: [id])
  gameId    Int
  player    players  @relation(fields: [playerId], references: [name])
  playerId  String

  @@id([gameId, playerId])
}